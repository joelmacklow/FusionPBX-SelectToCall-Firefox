{
  "manifest_version": 2,
  "name": "FusionPBX SelectToCall",
  "version": "2025.5.30.1",
  "description": "Select phone numbers and right click to call via FusionPBX",
  
  "permissions": [
    "storage",
    "contextMenus",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": ["content_script.js"],
    "run_at": "document_idle"
  }],
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "author": "Fork from Robin Mulloy (Anthropic Claude - Firefox Port)",
  "homepage_url": "https://github.com/joelmacklow/FusionPBX-SelectToCall-Firefox"
}
